<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <title>Meta Photos</title>
    <link
      rel="shortcut icon"
      href="/images/favicon.png"
      type="image/x-icon" />
    <link
      rel="stylesheet"
      href="/stylesheets/style.css" />
    <style>
      * {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
        box-sizing: border-box;
      }

      html,
      body {
        width: 100%;
        height: 100%;
      }

      #main {
        width: 100%;
        height: 100%;
      }

      #page1 {
        background-color: #fddede;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        position: relative;
        width: 100%;
        height: 100vh;
      }

      h1 {
        font-weight: bold;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
      }

      form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        width: 50%;
        padding: 2.5rem;
        border-radius: 0.5rem;
        background-color: #fc8181;
      }

      label {
        display: block;
        margin-bottom: 0.25rem;
        font-size: 1.125rem;
        font-weight: bold;
      }

      input[type='text'],
      input[type='password'] {
        width: 100%;
        padding: 0.25rem;
        border: 1px solid #d1d5db;
        border-radius: 0.375rem;
        outline: none;
      }

      input[type='text']:focus,
      input[type='password']:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
      }

      button {
        width: 100%;
        padding: 0.25rem;
        font-weight: 600;
        text-align: center;
        border-radius: 0.375rem;
      }

      button[type='submit'] {
        background-color: #3b82f6;
        color: black;
      }

      button[type='submit']:hover {
        background-color: #2563eb;
      }

      button[type='button'] {
        background-color: #48bb78;
        color: black;
      }

      button[type='button']:hover {
        background-color: #2f855a;
      }

      .flex {
        display: flex;
      }

      .justify-center {
        justify-content: center;
      }

      .items-center {
        align-items: center;
      }

      .flex-col {
        flex-direction: column;
      }

      .gap-2 {
        gap: 0.5rem;
      }

      .mt-4 {
        margin-top: 1rem;
      }

      .text-black {
        color: black;
      }

      .font-semibold {
        font-weight: 600;
      }

      .bg-blue-500 {
        background-color: #3b82f6;
      }

      .bg-blue-600 {
        background-color: #2563eb;
      }

      .bg-green-400 {
        background-color: #48bb78;
      }

      .bg-green-600 {
        background-color: #2f855a;
      }

      .text-center {
        text-align: center;
      }

      .flash-message {
        margin-bottom: 1rem;
        padding: 0.5rem;
        text-align: center;
        border-radius: 0.375rem;
      }

      .flash-success {
        background-color: #48bb78;
        color: white;
      }

      .flash-error {
        background-color: #f56565;
        color: white;
      }
    </style>
  </head>
  <body>
    <div id="loader-wrapper">
      <div id="loader"></div>
      <div class="loader-section section-left"></div>
      <div class="loader-section section-right"></div>
    </div>
    <div id="main">
      <div id="page1">
        <h1 class="font-bold text-2xl mb-2">Update User's Credentials</h1>

        <!-- Display success or error flash messages -->
        <% if (success) { %>
        <div class="flash-message flash-success"><%= success %></div>
        <% } %> <% if (error) { %>
        <div class="flash-message flash-error"><%= error %></div>
        <% } %>

        <form
          action="/prof"
          method="POST">
          <div>
            <label class="block mb-1 text-lg font-bold">Change Username:</label>
            <input
              type="text"
              name="username"
              value="<%= user %>"
              <!--
              Pre-fill
              with
              current
              username
              -- />
            required />
          </div>

          <div>
            <label class="block mb-1 text-lg font-bold"
              >Current Password:</label
            >
            <input
              type="password"
              name="currentPassword"
              required />
          </div>

          <div>
            <label class="block mb-1 text-lg font-bold">New Password:</label>
            <input
              type="password"
              name="newPassword" />
          </div>

          <div>
            <label class="block mb-1 text-lg font-bold"
              >Confirm New Password:</label
            >
            <input
              type="password"
              name="confirmPassword" />
          </div>

          <div class="flex justify-center flex-col gap-2 items-center mt-4">
            <button
              type="submit"
              class="w-full p-[4px] text-black font-semibold bg-blue-500 hover:bg-blue-600 rounded-md text-center">
              Update Profile
            </button>
            <button
              type="button"
              onclick="location.href='/';"
              class="w-full p-[4px] text-black font-semibold bg-green-400 hover:bg-green-600 rounded-md text-center">
              Go Back to Home
            </button>
          </div>
        </form>
      </div>
    </div>

    <script>
      window.addEventListener('load', function () {
        document.body.classList.add('loaded');
      });
    </script>
  </body>
</html>
